<Window x:Class="F1Stats.Dekstop.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F1Stats.Dekstop.UI"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="username" HorizontalAlignment="Center" Margin="0,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" FontSize="18"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" Width="380" FontSize="18"/>
        <Label Content="Email" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="Password" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,165,0,0" VerticalAlignment="Top" FontSize="24" Click="Login_Button_Click"/>
        <Button Content="Register" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top" FontSize="24" Click="Register_Button_Click"/>
    </Grid>
</Window>
