@model IEnumerable<F1Stats.Data.Models.Eredmeny>

<h2>List of results</h2>

@if (Model.Count() == 0)
{
    <p>No data in the database</p>
}
else
{
    <table>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().versenyhetvege_szam)</th>
            <th>@Html.DisplayNameFor(m => m.First().helyezes)</th>
            <th>Datasheet</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.versenyhetvege_szam)</td>
                <td>>@Html.DisplayFor(m => item.helyezes)</td>
                <td>@Html.ActionLink("[SHOW]", "Details", new { id = item.eredmenyId })</td>
                <td>@Html.ActionLink("[DEL]", "Remove", new { id = item.eredmenyId })</td>
                <td>@Html.ActionLink("[EDIT]", "Edit", new { id = item.eredmenyId })</td>
            </tr>
        }
    </table>
}