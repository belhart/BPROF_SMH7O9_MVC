@model IEnumerable<F1Stats.Logic.ElertPont>
@{
    ViewData["Title"] = "HomeSumPointsList";
}

<h1>HomeSumPointsList</h1>

@if (Model.Count() == 0)
{
    <p>No data in the database</p>
}
else
{
    <table>
        <tr>
            <th>Versenyzo</th>
            <th>Elert pont</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.DriverName)</td>
                <td>@Html.DisplayFor(m => item.Points)</td>
            </tr>
        }
    </table>
}