@model IEnumerable<F1Stats.Data.Models.Versenyhetvege>

<h2>List of races</h2>

@if (Model.Count() == 0)
{
    <p>No data in the database</p>
}
else
{
    <table>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().nev)</th>
            <th>@Html.DisplayNameFor(m => m.First().VERSENYHETVEGE_SZAMA)</th>
            <th>Datasheet</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.nev)</td>
                <td>>@Html.DisplayFor(m => item.VERSENYHETVEGE_SZAMA)</td>
                <td>@Html.ActionLink("[SHOW]", "Details", new { id = item.VERSENYHETVEGE_SZAMA })</td>
                <td>@Html.ActionLink("[DEL]", "Remove", new { id = item.VERSENYHETVEGE_SZAMA })</td>
                <td>@Html.ActionLink("[EDIT]", "Edit", new { id = item.VERSENYHETVEGE_SZAMA })</td>
            </tr>
        }
    </table>
}