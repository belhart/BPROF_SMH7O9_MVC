<Window x:Class="F1Stats.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F1Stats.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Window.DataContext>
        <local:MainVM />
    </Window.DataContext>
    <Grid>
        <DataGrid ItemsSource="{Binding Path=AllVersenyzo}" SelectedItem="{Binding Path=SelectedVersenyzo}" IsReadOnly="False" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="362"/>
        <Button Content="DEL" Command="{Binding Path=Delcmd}" HorizontalAlignment="Left" Margin="377,110,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="LOAD" Command="{Binding Path=Loadcmd}" HorizontalAlignment="Left" Margin="377,35,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="ADD" Command="{Binding Path=Addcmd}" HorizontalAlignment="Left" Margin="377,60,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="MOD" Command="{Binding Path=Modcmd}" HorizontalAlignment="Left" Margin="377,85,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
